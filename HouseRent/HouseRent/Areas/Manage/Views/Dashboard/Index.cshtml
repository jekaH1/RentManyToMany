@model DashboardViewModel
@{
    ViewData["Title"] = "Index";
    List<Order> todayOrd = Model.Orders.Where(x => x.OrderDay.Value.Day == DateTime.Now.Day).ToList();
    List<Order> thisMonth = Model.Orders.Where(x => x.OrderDay.Value.Month == DateTime.Now.Month).ToList();
    Order mostExp = Model.Orders.OrderByDescending(x => x.TotalPrice).Where(x => x.OrderDay.Value.Month == DateTime.Now.Month).First();
    Order mostNotexp = Model.Orders.OrderBy(x => x.TotalPrice).Where(x => x.OrderDay.Value.Month == DateTime.Now.Month).First();
    int total = 0;
    int totalMonth = 0;
    int price = mostExp.TotalPrice.Value;
    int priceNotExp = mostNotexp.TotalPrice.Value;
    foreach (var item in todayOrd)
    {
        total+= item.TotalPrice.Value;
    }
    foreach (var item in thisMonth)
    {
        totalMonth += item.TotalPrice.Value;
    }
}

<!-- Sale & Revenue Start -->
<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-sm-6 col-xl-3">
            <div class="bg-secondary rounded d-flex align-items-center justify-content-between p-4">
                <i class="fa fa-chart-line fa-3x text-primary"></i>
                <div class="ms-3">
                    <p class="mb-2">Today Sale</p>
                    <h6 class="mb-0">$@total</h6>
                </div>
            </div>
        </div>
        <div class="col-sm-6 col-xl-3">
            <div class="bg-secondary rounded d-flex align-items-center justify-content-between p-4">
                <i class="fa fa-chart-bar fa-3x text-primary"></i>
                <div class="ms-3">
                    <p class="mb-2">This Month Sale</p>
                    <h6 class="mb-0">$@totalMonth</h6>
                </div>
            </div>
        </div>
        <div class="col-sm-6 col-xl-3">
            <div class="bg-secondary rounded d-flex align-items-center justify-content-between p-4">
                <i class="fa fa-chart-area fa-3x text-primary"></i>
                <div class="ms-3">
                    <a class="mb-2 " asp-action="" >Rent of Month</a>
                    <h6 class="mb-0">$@price</h6>
                </div>
            </div>
        </div>
        <div class="col-sm-6 col-xl-3">
            <div class="bg-secondary rounded d-flex align-items-center justify-content-between p-4">
                <i class="fa fa-chart-pie fa-3x text-primary"></i>
                <div class="ms-3">
                    <a class="mb-2">The Cheapest</a>
                    <h6 class="mb-0">$@priceNotExp</h6>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Sale & Revenue End -->

