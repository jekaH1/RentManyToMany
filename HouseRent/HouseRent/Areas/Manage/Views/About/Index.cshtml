@model List<AboutUS>
@{
    ViewData["Title"] = "Index";
    int counter = 0;
}
<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-secondary rounded h-100 p-4">
                <h6 class="mb-4"> Sliders</h6>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Title</th>
                                <th scope="col">CeoName</th>
                                <th scope="col">Position</th>
                                <th scope="col">Avatar Image</th>
                                <th scope="col">Sign Image</th>
                                <th scope="col">
                                    Actions
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                counter++;
                                <tr>
                                    <th scope="row">@counter</th>
                                    <td>@item.Title</td>
                                    <td>@item.CeoName</td>
                                    <td>@item.Position</td>
                                    <td>
                                        <div style="max-width:200px;">
                                            <img style="max-width:100%;" src="~/uploads/about/@item.AvatarImg">
                                        </div>
                                    </td>
                                    <td>
                                        <div style="max-width:200px;">
                                            <img style="max-width:100%;" src="~/uploads/about/@item.SignImg">
                                        </div>
                                    </td>
                                    <td>
                                        <a class="btn btn-outline-info" asp-action="update" asp-controller="about" asp-route-id="@item.Id">Update</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


