@model Slider
@{
    ViewData["Title"] = "Create";
}
<form method="post" enctype="multipart/form-data">

    <div class="container-fluid pt-4 px-4">
        <div class="row g-4">
            <div class="col-sm-12 @*col-xl-6*@">
                <div class="bg-secondary rounded h-100 p-4">
                    <h6 class="mb-4">Create Slider</h6>
                    <div class="form-floating mb-3">
                        <input asp-for="Title1" class="form-control" id="floatingInput"
                               placeholder="Title">
                        <label for="floatingInput">Title</label>
                        <span class="text-danger" asp-validation-for="Title1"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="Title2" class="form-control" id="floatingInput"
                               placeholder="Title">
                        <label for="floatingInput">Title</label>
                        <span class="text-danger" asp-validation-for="Title2"></span>

                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="RedirectUrl" class="form-control" id="floatingInput"
                               placeholder="URL">
                        <label for="floatingInput">Redirect URL</label>
                        <span class="text-danger" asp-validation-for="RedirectUrl"></span>

                    </div>

                    <div class="form-floating">
                        <textarea class="form-control" placeholder="Leave a comment here"
                                  asp-for="Description"
                                  id="floatingTextarea" style="height: 150px;"></textarea>
                        <label for="floatingTextarea">Description</label>
                        <span class="text-danger" asp-validation-for="Description"></span>
                        @*<select asp-items="@(new MultiSelectList(ViewBag.Categories,"","") )"></select>*@
                    </div>
                    <div class="mb-3">
                        <label asp-for="Image" class="form-label">Default file input example</label>
                        <input class="form-control bg-dark" asp-for="Image"  id="formFile">
                        <span class="text-danger" asp-validation-for="Image"></span>
                    </div>
                    <button type="submit" class="btn btn-primary">Create</button>
                </div>
            </div>
        </div>
    </div>
</form>