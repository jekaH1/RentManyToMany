@model List<Slider>
@{
    ViewData["Title"] = "Index";
    int counter = 0;
}
@section css{
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/limonte-sweetalert2/11.7.1/sweetalert2.min.css" integrity="sha512-NvuRGlPf6cHpxQqBGnPe7fPoACpyrjhlSNeXVUY7BZAj1nNhuNpRBq3osC4yr2vswUEuHq2HtCsY2vfLNCndYA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
}
<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-secondary rounded h-100 p-4">
                <h6 class="mb-4"> Sliders</h6>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Title-1</th>
                                <th scope="col">Title-2</th>
                                <th scope="col" style="width:500px;">Despcription</th>
                                <th scope="col">Image</th>
                                <th scope="col" style="width:125px;">
                                    Actions
                                    <a class="btn btn-info" asp-action="create" asp-controller="slider">Create</a>
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                counter++;
                                <tr>
                                    <th scope="row">@counter</th>
                                    <td>@item.Title1</td>
                                    <td>@item.Title2</td>
                                    <td style="width:500px;">@item.Description</td>
                                    <td>
                                        <div style="max-width:200px;">      
                                            <img style="width:100%;" src="~/uploads/sliders/@item.Img">
                                        </div>
                                    </td>
                                    <td class="d-flex flex-column justify-content-center" style="width:125px;">
                                        <a class="btn btn-outline-info" asp-action="update" asp-controller="slider" asp-route-id="@item.Id">Update</a>
                                        <a class= "btn btn-danger my-2 delete-btn"  asp-action="delete" asp-controller="slider" asp-route-id="@item.Id">Delete</a>
                                        <a class="btn btn-warning" asp-action="softdelete" asp-controller="slider" asp-route-id="@item.Id">Soft delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
@section js{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/limonte-sweetalert2/11.7.1/sweetalert2.min.js" integrity="sha512-vCI1Ba/Ob39YYPiWruLs4uHSA3QzxgHBcJNfFMRMJr832nT/2FBrwmMGQMwlD6Z/rAIIwZFX8vJJWDj7odXMaw==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
}